{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "module": "NodeNext",
    // "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    // "strict": true,
    // "noImplicitAny": true,
    "noUnusedLocals": true,
    "noEmitOnError": true,
    "removeComments": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "lib": ["esnext"]
  // "ts-node": { "esm": true } в nodemon.json --esm заменяет
}
